<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="30dp">
        <TextView
                android:text="Total Questions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:id="@+id/textView"
                android:textColor="#000"
                android:layout_weight="1"
        />
        <TextView
                android:textAlignment="viewEnd"
                android:textColor="#000"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:layout_marginStart="5dp"

        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"

                  android:layout_margin="30dp"

    >
        <TextView

                android:text="Correct Answers"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="5dp"
                android:id="@+id/textView5"
        />
        <TextView
                android:textAlignment="viewEnd"
                android:textColor="#000"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginStart="5dp"


        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="30dp"
    >
        <TextView
                android:text="Wrong Answers"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"

                android:textSize="15sp"
                android:textColor="#000"
                android:padding="5dp"
        />
        <TextView
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:textColor="#000"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_marginStart="5dp"
        />
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <Button
                android:elevation="20dp"
                android:shadowColor="#000"

                android:background="@drawable/result_button"
                android:onClick="openHome"
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="78dp"
                android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Try Again"
               android:padding="10dp"
                android:onClick="openQuiz" android:layout_alignParentBottom="true" android:layout_marginBottom="78dp"
                android:layout_alignParentStart="true" android:layout_marginStart="50dp"
                android:background="@drawable/result_button"
                android:elevation="20dp"
                android:shadowColor="#000"
              />
    </RelativeLayout>


</LinearLayout>