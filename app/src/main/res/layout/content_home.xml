<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_home"
        tools:context=".HomeActivity"

>

    <ScrollView android:layout_width="0dp" android:layout_height="0dp" android:id="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">

            <android.support.v7.widget.CardView
                    android:onClick="openIntro"
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:text="Introduction"
                          android:paddingLeft="10dp"

                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:onClick="openMotion"
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Motion"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openForce">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Force"
                          android:textAppearance="@style/text"
                />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:onClick="openlm"
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Laws Of Motion"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:onClick="openWork"
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Work"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:onClick="openEnergy"
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Energy and power"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openPower">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Gravitation"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openWaves">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Waves"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openSound">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Sound"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openElectricity">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Electricity"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openMagneticEffect">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Magnetic effects of current"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openSourcesofEnergy">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Sources Of Energy"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openSolarSystem">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Solar System"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openLight">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Light"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openReflectandRefract">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text="Reflection and Refraction"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openInstruments">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text=" Important Instruments"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openQuiz">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text=" Quiz"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openAwards">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text=" Awards given in physics"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:background="@color/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp"
                    android:onClick="openAstro">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/rect"
                          android:paddingLeft="10dp"
                          android:text=" Astrophysics"
                          android:textAppearance="@style/text"/>

            </android.support.v7.widget.CardView>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        ads:adSize="SMART_BANNER"
                        ads:adUnitId="ca-app-pub-9175625503877306/3657409338">
                </com.google.android.gms.ads.AdView>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>