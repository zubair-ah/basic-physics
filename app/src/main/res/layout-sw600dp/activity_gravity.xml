<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Gravity">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Gravitation"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#000"
                      android:textSize="35sp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textAppearance="@style/theading"
                      android:text="Introduction:"
                      android:layout_margin="5dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/gravity"
                      android:textAppearance="@style/tbody"
                      android:layout_margin="5dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Universal law of gravitation:"
            android:layout_margin="5dp"
            android:textAppearance="@style/theading"/>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/law"
            android:layout_margin="3dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/lawofgravity"
                      android:textAppearance="@style/tbody"
                      android:layout_margin="5dp"/>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/newton"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Free Fall:"
                      android:layout_margin="5dp"
                      android:textAppearance="@style/theading"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/freefall"
                      android:textAppearance="@style/tbody"
                      android:layout_margin="5dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Mass:"
                      android:layout_margin="5dp"
                      android:textAppearance="@style/theading"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/mass"
                      android:textAppearance="@style/tbody"
                      android:layout_margin="5dp"/>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/mass"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Weight:"
                      android:layout_margin="5dp"
                      android:textAppearance="@style/theading"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/weight"
                      android:textAppearance="@style/tbody"
                      android:layout_margin="5dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/gravad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        ads:adSize="SMART_BANNER"
                        ads:adUnitId="ca-app-pub-9175625503877306/5914416322">
                </com.google.android.gms.ads.AdView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>