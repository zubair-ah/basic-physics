<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Quiz"
        android:background="#a9c1da"
>
    <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                  android:orientation="vertical" android:id="@+id/linearLayout"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/questiontxt"
                android:textAlignment="viewStart"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="24dp"
                android:text="question"
                android:textColor="#000"
                android:textSize="45sp"
                android:fontFamily="@font/gabriola"
        />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="10dp">
            <Button
                    android:drawableLeft="@drawable/a_asset"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Option 1"
                    android:textSize="35sp"
                    android:padding="10dp"
                    android:background="@drawable/button_shape"
                    android:id="@+id/button1"
                    android:layout_marginBottom="5dp"/>
            <Button android:drawableLeft="@drawable/ic_basset_37"
                    android:background="@drawable/button_shape"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Option 2"
                    android:textSize="35sp"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/button2"/>
            <Button android:drawableLeft="@drawable/c_asset"
                    android:background="@drawable/button_shape"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Option 3"
                    android:id="@+id/button3" android:textSize="35sp"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"/>
            <Button android:drawableLeft="@drawable/d_asset"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Option 4"
                    android:id="@+id/button4" android:textSize="35sp"
                    android:padding="10dp"
                    android:background="@drawable/button_shape"
                    android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="40sp"
                  android:text="00:00"
                  android:textAlignment="center"
                  android:textColor="#000"
                  android:layout_margin="10sp"
                  android:id="@+id/timertxt"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>